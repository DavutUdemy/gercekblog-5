<%- include ('../partials/header') %>
<style>
  body{
    background-color: lightgrey;
  }
</style>
<div class="container">
    <form style="margin-top:100px; " action="/signin" method="POST">
        <h1 style="text-align:center;">Sign In</h1>
        <h4 style="text-align:center; color:red;">Only For Admin</h4>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="username">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<%- include ('../partials/footer') %>
